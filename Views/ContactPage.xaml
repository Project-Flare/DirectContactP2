<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.Views.ContactPage"
             Title="Chat Application"
             BackgroundColor="#4B8C69">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Button Text="Home" Clicked="Button1_Clicked" />
            <Button Text="CurrUsers" Clicked="Button2_Clicked" />
            <Button Text="NewUsers" Clicked="Button3_Clicked" />
            <Button Text="Settings" Clicked="Button4_Clicked" />
        </StackLayout>
    </Grid>
</ContentPage>
    